<p id="notice"><%= notice %></p>

<h1>Sistemas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sistemas.each do |sistema| %>
      <tr>
        <td><%= sistema.nome %></td>
        <td><%= link_to 'Show', sistema %></td>
        <td><%= link_to 'Edit', edit_sistema_path(sistema) %></td>
        <td><%= link_to 'Destroy', sistema, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sistema', new_sistema_path %>
